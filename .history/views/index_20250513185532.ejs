<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sydney Events</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>
  <header>
    <div class="header-content">
      <h1>Sydney Upcoming Events</h1>
      <p class="tagline">Discover the best events in Sydney with ease</p>
    </div>
  </header>
  <main class="container">
    <div class="email-section">
      <label for="email" class="email-label">Stay Updated on Sydney Events</label>
      <div class="email-input-wrapper">
        <input type="email" id="email" placeholder="Enter your email to get updates" />
        <button class="subscribe-btn" onclick="captureEmail()">Subscribe</button>
      </div>
    </div>
    <section class="events-grid">
      <% if (events.length === 0) { %>
        <p class="no-events">No events found at the moment. Check back soon!</p>
      <% } else { %>
        <% events.forEach(event => { %>
          <div class="event-card">
            <h3><%= event.title %></h3>
            <p class="event-date"><%= event.date.split("IC")[0] %></p>
            <button class="ticket-btn" onclick="getTicket('<%= event.link %>')">Get Tickets</button>
          </div>
        <% }) %>
      <% } %>
    </section>
  </main>
  <footer>
    <p>&copy; 2025 Sydney Events. All rights reserved.</p>
  </footer>

  <script>
    function captureEmail() {
      const email = document.getElementById("email").value;
      if (!email) return alert("Please enter your email!");
      alert("Thank you for subscribing! Email captured: " + email);
    }

    function getTicket(link) {
      const email = document.getElementById("email").value;
      if (!email) return alert("Please enter your email to proceed!");
      alert("Email captured: " + email);
      window.location.href = link;
    }
  </script>
</body>
</html>