<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sydney Events</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>Sydney Upcoming Events</h1>
  </header>
  <main class="container">
    <div class="email-section">
      <input type="email" id="email" placeholder="Enter your email to get updates" />
    </div>
    <section class="events-grid">
      <% if (events.length === 0) { %>
        <p class="no-events">No events found!</p>
      <% } else { %>
        <% events.forEach(event => { %>
          <div class="event-card">
            <h3><%= event.title %></h3>
            <p class="event-date"><%= event.date.split("IC")[0] %></p>
            <button onclick="getTicket('<%= event.link %>')">Get Tickets</button>
          </div>
        <% }) %>
      <% } %>
    </section>
  </main>

  <script>
    function getTicket(link) {
      const email = document.getElementById("email").value;
      if (!email) return alert("Please enter your email!");
      alert("Email captured: " + email);
      window.location.href = link;
    }
  </script>
</body>
</html>