<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sydney Events</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Google Fonts: Poppins and Inter -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="bg-dark text-white text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold">Sydney Upcoming Events</h1>
      <p class="lead mt-2">Discover the best events in Sydney with ease</p>
    </div>
  </header>

  <main class="container py-5">
    <div class="email-section text-center mb-5">
      <label for="email" class="form-label h4 mb-3">Stay Updated on Sydney Events</label>
      <div class="d-flex justify-content-center gap-3 flex-wrap">
        <input type="email" id="email" class="form-control w-auto" placeholder="Enter your email to get updates" style="max-width: 350px;" />
        <button class="btn btn-custom-gold" onclick="captureEmail()">Subscribe</button>
      </div>
    </div>

    <section class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% if (events.length === 0) { %>
        <div class="col">
          <p class="text-center text-danger fst-italic fs-5">No events found at the moment. Check back soon!</p>
        </div>
      <% } else { %>
        <% events.forEach(event => { %>
          <div class="col">
            <div class="card h-100 shadow-sm border-0 event-card">
              <div class="card-body">
                <h3 class="card-title h5"><%= event.title %></h3>
                <p class="card-text text-muted event-date"><%= event.date.split("IC")[0] %></p>
                <button class="btn btn-custom-navy ticket-btn" onclick="getTicket('<%= event.link %>')">Get Tickets</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </section>
  </main>

  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p class="mb-0">Â© 2025 Sydney Events. All rights reserved.</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Custom JavaScript -->
  <script>
    function captureEmail() {
      const email = document.getElementById("email").value;
      if (!email) return alert("Please enter your email!");
      alert("Thank you for subscribing! Email captured: " + email);
    }

    function getTicket(link) {
      const email = document.getElementById("email").value;
      if (!email) return alert("Please enter your email to proceed!");
      alert("Email captured: " + email);
      window.location.href = link;
    }
  </script>
</body>
</html>